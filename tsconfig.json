{
	"compilerOptions": {
		"strict": true,
		"target": "es2017",
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "examples", "docs"]
}
